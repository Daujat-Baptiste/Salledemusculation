{% extends 'base.html.twig' %}

{% block title %}Wolfit-User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email}}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ app.user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.nom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ app.user.sexe ? 'Homme' : 'Femme' }}</td>
            </tr>
            <tr>
                <th>Newsletter</th>
                <td>{{ app.user.newsletter ? 'Abonné(e)' : 'Pas abonné(e)' }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ app.user.numtel }}</td>
            </tr>
        </tbody>
    </table>
    <a href="">Mot de passe oublié ?</a>
    <a href="{{ path('front_user_edit', {'id': app.user.id}) }}">Modifier</a>
{% endblock %}
