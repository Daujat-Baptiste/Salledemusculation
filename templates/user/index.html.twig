{% extends 'base.html.twig' %}

{% block title %}Wolfit-User index{% endblock %}

{% block body %}
    <h1>Liste utilisateur</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>MDP</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Sexe</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateurs
                        {% elseif role == "ROLE_REDACTOR" %}
                            RÃ©dacteur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td>&bull;&bull;&bull;&bull;&bull;&bull;</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.sexe }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'utilisateurs</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
